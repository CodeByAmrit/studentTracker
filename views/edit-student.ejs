<%- include('partials/header', { title: 'Home' }) %>

    <body>
        <div class="wrapper ">
            <!-- Bottom Navbar -->
            <%- include('partials/navbar') %>

                <div class="main p-3" style="height: 100vh; overflow-y:auto ; background-color: #f3f7fe;">
                    <h1 class="text-center mb-0 ">
                        Student Profile
                    </h1>
                    <hr>

                    <section>
                        <form action="#" method="post" enctype="multipart/form-data">
                            <div class="container py-2">
                                <div class="row">
                                    <div class="col-lg-4">
                                        <div class="card mb-4">
                                            <div class="card-body text-center">
                                                <img src="/image/graduated.png" id="showStudentPic"
                                                    class="rounded-circle img-fluid" alt="..." width="150px"
                                                    height="150px">
                                                <!-- Student Name -->
                                                <h5 class="my-3">John Smith</h5>

                                                <p class="text-muted mb-1">Full Stack Developer</p>
                                                <p class="text-muted mb-4">Bay Area, San Francisco, CA</p>
                                                <div class="d-flex justify-content-center mb-2">
                                                    <button type="button" data-mdb-button-init data-mdb-ripple-init
                                                        class="btn btn-primary" id="editStudentBtn">Edit</button>
                                                    <button type="button" data-mdb-button-init data-mdb-ripple-init
                                                        class="btn btn-outline-primary ms-1">Message</button>
                                                </div>
                                            </div>
                                        </div>

                                    </div>

                                    <div class="col-lg-8">
                                        <div class="card mb-4">
                                            <div class="card-body">
                                                <div class="row">

                                                    <div class="col-sm-3">
                                                        <label for="fullName" class="form-label">Full Name</label>
                                                    </div>
                                                    <div class="col-sm-9">
                                                        <input name="full_name" type="text" class="form-control"
                                                            id="fullName" value="Full Name" disabled readonly>
                                                    </div>
                                                </div>
                                                <hr>

                                                <div class="row">
                                                    <div class="col-sm-3">
                                                        <label for="fatherName" class="form-label">Father's
                                                            Name</label>
                                                    </div>
                                                    <div class="col-sm-9">
                                                        <input name="father_name" type="text" class="form-control"
                                                            id="fatherName" value="Father Name" disabled readonly>
                                                    </div>
                                                </div>
                                                <hr>

                                                <div class="row">
                                                    <div class="col-sm-3">
                                                        <label for="MotherName" class="form-label">Mother's
                                                            Name</label>
                                                    </div>
                                                    <div class="col-sm-9">
                                                        <input name="mother_name" type="text" class="form-control"
                                                            id="MotherName" value="Mother Name" disabled readonly>
                                                    </div>
                                                </div>
                                                <hr>

                                                <div class="row">
                                                    <div class="col-sm-3">
                                                        <label for="Email" class="form-label">Email</label>
                                                    </div>
                                                    <div class="col-sm-9">
                                                        <input name="email" type="email" class="form-control" id="Email"
                                                            value="Email" disabled readonly>
                                                    </div>
                                                </div>
                                                <hr>

                                                <div class="row">
                                                    <div class="col-sm-3">
                                                        <label for="phone" class="form-label">Phone</label>
                                                    </div>
                                                    <div class="col-sm-9">
                                                        <input name="phone" type="text" class="form-control" id="phone"
                                                            value="Phone" disabled readonly>
                                                    </div>
                                                </div>
                                                <hr>

                                                <div class="row">
                                                    <div class="col-sm-3">
                                                        <label for="zip" class="form-label">Zip</label>
                                                    </div>
                                                    <div class="col-sm-9">
                                                        <input name="zip" type="text" class="form-control" id="zip"
                                                            value="Zip" disabled readonly>
                                                    </div>
                                                </div>
                                                <hr>

                                                <div class="row">
                                                    <div class="col-sm-3">
                                                        <label for="village" class="form-label">H No</label>
                                                    </div>
                                                    <div class="col-sm-9">
                                                        <input name="village" type="text" class="form-control"
                                                            id="village" value="H NO" disabled readonly>
                                                    </div>
                                                </div>
                                                <hr>

                                                <div class="row">
                                                    <div class="col-sm-3">
                                                        <label for="state" class="form-label">State</label>
                                                    </div>
                                                    <div class="col-sm-9">
                                                        <!-- <input name="state" type="text" class="form-control" id="state"
                                                        value="State" disabled readonly> -->
                                                        <select class="form-select" name="state" id="validationState"
                                                            required>
                                                            <option selected disabled value="">Choose...</option>
                                                            <!-- adding states through ping -->

                                                        </select>
                                                    </div>
                                                </div>
                                                <hr>

                                                <div class="row">
                                                    <div class="col-sm-3">
                                                        <label for="district" class="form-label">District</label>
                                                    </div>
                                                    <div class="col-sm-9">
                                                        <select class="form-select" name="district"
                                                            id="validationDistrict" required>
                                                            <option selected disabled value="">Choose...</option>
                                                            <!-- adding states through ping -->

                                                        </select>
                                                    </div>
                                                </div>
                                                <hr>

                                                <div class="row">
                                                    <div class="col-sm-3">
                                                        <label for="gender" class="form-label">Gender</label>
                                                    </div>
                                                    <div class="col-sm-9">
                                                        <select class="form-select" name="gender"
                                                            aria-label="Default select example" id="selectGender">
                                                            <option selected disabled value="">Select...</option>
                                                            <option value="Male" selected>Male</option>
                                                            <option value="Female">Female</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <hr>

                                                <div class="row">
                                                    <div class="col-sm-3">
                                                        <label for="srnNo" class="form-label">SRN No</label>
                                                    </div>
                                                    <div class="col-sm-9">
                                                        <input name="srnNo" type="text" class="form-control" id="srnNo"
                                                            value="SRN" disabled readonly>
                                                    </div>
                                                </div>
                                                <hr>

                                                <div class="row">
                                                    <div class="col-sm-3">
                                                        <label for="penNo" class="form-label">PEN NO</label>
                                                    </div>
                                                    <div class="col-sm-9">
                                                        <input name="penNo" type="text" class="form-control" id="penNo"
                                                            value="Father Name" disabled readonly>
                                                    </div>
                                                </div>
                                                <hr>

                                                <div class="row">
                                                    <div class="col-sm-3">
                                                        <label for="admissionNo" class="form-label">Admission
                                                            No</label>
                                                    </div>
                                                    <div class="col-sm-9">
                                                        <input name="admissionNo" type="text" class="form-control"
                                                            id="admissionNo" value="Father Name" disabled readonly>
                                                    </div>
                                                </div>
                                                <hr>

                                                <div class="row">
                                                    <div class="col-sm-3">
                                                        <label for="class" class="form-label">Class</label>
                                                    </div>
                                                    <div class="col-sm-9">
                                                        <input name="class" type="text" class="form-control" id="class"
                                                            value="class" disabled readonly>
                                                    </div>

                                                </div>

                                                <hr>
                                                <div class="mb-2 col-5">

                                                    <label for="selectUserFile" class="form-label">Student Photo</label>
                                                    <input type="file" name="userPhoto" accept="image/*"
                                                        class="form-control" aria-label="file example"
                                                        id="selectUserFile">
                                                    <div class="invalid-feedback">Example invalid form file feedback
                                                    </div>

                                                </div>

                                                <div class="col-md-1">

                                                </div>

                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </form>
                    </section>



                </div>

        </div>

        <%- include('partials/footer') %>